---
import Layout from "../layouts/Layout.astro";
import MainNavWithDropdowns from "../components/MainNavWithDropdowns.astro";
import Link from "../components/Link.astro";

const pageTitle = "Davant Systems | AI & StableDiffusion Resources";
---

<Layout title={pageTitle}>
  <MainNavWithDropdowns />
  <main class="">
    <section class="border-b-2 hero__wrapper border-slate-400 border-opacity-5">
      <div class="relative flex flex-col items-center justify-center min-h-screen overflow-hidden hero sm:flex-row">
        <span class="absolute top-0 left-0 z-40 block w-screen h-screen opacity-100 hero-gradient-1"></span>
        <div class="relative z-20 flex flex-col items-center pt-8 pb-20 text-center hero-content text-neutral-content">
          <div class="flex flex-col items-center mb-2">
            <div class="relative flex flex-col items-center cta-wrapper">
              <div class="flex flex-col software-spotlight sm:flex-row">
                <div class="flex flex-col pr-8 text-left text">
                  <h1 class="mb-0 font-light text-transparent bg-gradient-to-tr from-pink-400 via-fuchsia-500 to-purple-800 bg-clip-text">
                    <span class="block -mb-4 text-5xl font-bold sm:text-7xl md:text-8xl">Resources </span><span class="block text-5xl leading-tight sm:text-7xl md:text-8xl">Studio</span>
                  </h1>

                  <div class="block max-w-lg px-3 py-0 mt-3 mb-0 ml-1 italic font-light leading-10 text-left -skew-x-12 text-bg bg-gradient-to-br from-success via-secondary to-blue-500 text-neutral ml- opacity-80 mix-blend-soft-light">
                    <p class="flex items-center py-0 text-sm skew-x-12 leading-1"><span class="">Beta Access</span><span class="inline-block ml-auto mr-0 text-sm">Ends 02.17.2024</span></p>
                  </div>
                  <div class="flex flex-col px-4 py-3 mt-0 bg-opacity-100 shadow-xl bg-base-300">
                    <div class="pt-4 pb-3">
                      <!-- Requirements content simplified -->
                      <div class="text-sm">
                        <p class="font-bold mb-2">System Requirements:</p>
                        <ul class="list-disc list-inside">
                          <li>Windows 10/11 (64-bit)</li>
                          <li>16GB RAM minimum</li>
                          <li>NVIDIA GPU with 8GB+ VRAM</li>
                          <li>50GB free disk space</li>
                        </ul>
                      </div>
                    </div>
                    <Link 
                      class="pl-0 pr-4 mx-auto mt-4 mb-0 rounded-sm shadow-sm bo rder-opacity-50 cta__button--download effect__chromeflash btn btn-primary text-md md:text-lg indicator bg-gradient-to-br from-pink-400 via-fuchsia-500 to-purple-500 hover:from-pink-500 hover:to-purple-400 hover:scale-105 text-neutral border-1 border-cyan-500 shadow-pink-500"
                      href="#third-party-disclaimer"
                    >
                      <span class="p-2 bg-transparent rounded-full badge-neutral">
                        <svg class="stroke-neutral" width="22px" height="22px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" stroke="#ffffff">
                          <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
                          <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g>
                          <g id="SVGRepo_iconCarrier">
                            <path d="M8 22.0002H16C18.8284 22.0002 20.2426 22.0002 21.1213 21.1215C22 20.2429 22 18.8286 22 16.0002V15.0002C22 12.1718 22 10.7576 21.1213 9.8789C20.3529 9.11051 19.175 9.01406 17 9.00195M7 9.00195C4.82497 9.01406 3.64706 9.11051 2.87868 9.87889C2 10.7576 2 12.1718 2 15.0002L2 16.0002C2 18.8286 2 20.2429 2.87868 21.1215C3.17848 21.4213 3.54062 21.6188 4 21.749" stroke-width="1.5" stroke-linecap="round"></path>
                            <path d="M12 2L12 15M12 15L9 11.5M12 15L15 11.5" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                          </g>
                        </svg>
                      </span>
                      <span class="pt-1">Access Davant Studio Now</span>
                    </Link>
                  </div>
                </div>

                <div class="mx-auto mb-0 space-x-2 border-2 shadow-sm wrapper__screenshots carousel carousel-center border-base-300 border-opacity-20 w-44 sm:w-60 md:w-72">
                  <div class="item carousel-item">
                    <img
                      class="w-44 sm:w-60 md:w-72"
                      src="/src/assets/images/davant-studio-presets.png"
                      alt="Screenshot of Davant Studio software"
                    />
                  </div>
                  <div class="item carousel-item">
                    <img
                      class="w-44 sm:w-60 md:w-72"
                      src="/src/assets/images/davant-studio-controls.png"
                      alt="Screenshot of Davant Studio software"
                    />
                  </div>
                  <div class="item carousel-item">
                    <img
                      class="w-44 sm:w-60 md:w-72"
                      src="/src/assets/images/davant-studio-prompts.png"
                      alt="Screenshot of Davant Studio software"
                    />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="absolute bottom-0 block h-full min-w-full -translate-x-1/2 opacity-100 background-image left-1/2 z-1">
          <img
            class="relative block h-full hero__background-image object-cover w-full"
            src="/src/assets/images/hero2.png"
            alt="Screenshot of Davant Studio software"
          />
          <div class="absolute bottom-0 left-0 z-10 w-full opacity-100 gradient-fade pb-28 bg-gradient-to-b from-transparent to-base-300"></div>
        </div>
      </div>

      <section class="container max-w-3xl mx-auto border-b-2 border-slate-700 border-opacity-10">
        <div class="relative block py-20 mx-auto">
          <h2 class="relative inline-block w-auto px-2 py-0 mb-8 mr-auto text-4xl font-extrabold text-transparent bg-gradient-to-br from-cyan-300 via-secondary to-cyan-400 bg-clip-text">Features</h2>
          <div class="max-w-2xl pr-10 mb-4 prose text-left text-transparent text-bg bg-gradient-to-br from-cyan-300 via-secondary to-purple-500 bg-clip-text">
            <ul class="pl-0 font-light leading-snug list-none list">
              <li class="mb-4 list-item"><span class="font-extrabold">Real-time generative AI engine: </span><span class="font-extralight">Render as fast as your computer can handle</span></li>
              <li class="mb-4 list-item"><span class="font-extrabold">Control what matters: </span><span class="font-extralight">What you need to dial in your vision</span></li>
              <li class="mb-4 list-item"><span class="font-extrabold">Adapts to you: </span><span class="font-extralight">Use images, folders or screenshot as input</span></li>
              <li class="mb-4 list-item"><span class="font-extrabold">No internet required: </span><span class="font-extralight">Your files never leave your computer</span></li>
              <li class="mb-4 list-item"><span class="font-extrabold">Expansive model library: </span><span class="font-extralight">Use any Stable Diffusion checkpoint, embedding or LoRA from the community</span></li>
            </ul>
          </div>
        </div>
      </section>

      <div id="third-party-disclaimer" class="relative z-20 block px-4 pt-4 pb-10 mt-0 bg-black disclaimer bg-opacity-30">
        <div class="container block w-auto max-w-3xl mx-auto mt-5 p-0.5 text-sm -translate-y-0.5 indicator">
          <span class="px-1 py-4 mr-2 indicator-item indicator-center badge badge-warning badge-xl">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 stroke-current" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>
          </span>
          <div class="relative p-0.5 overflow-hidden gradient-border-wrapper">
            <div class="pt-12 pb-8 pl-8 pr-4 wrapper bg-base-300">
              <div class="absolute top-0 left-0 w-full h-full duration-100 opacity-100 -z-10 from-warning bg bg-gradient-to-b via-orange-500 to-transparent"></div>
              <div class="">
                <span class="inline-block px-1 mb-3 font-mono text-xs italic font-light leading-normal text-center bg-warning text-neutral">dependencies ~ %</span>
                <p class="mb-4 text-lg font-bold text-warning">Davant Studio is <span class="italic">not</span> a standalone AI system. <span class="inline-block">Additional installation of third-party software is required.</span></p>
                <div class="pt-4 mb-8 leading-relaxed">
                  <p class="mb-4 text-lg font-bold">Already have Automatic 1111 SD Web UI installed?</p>
                  <p class="mb-1">Great! Make sure you have:</p>
                  <ul class="mb-4 list-disc list-inside">
                    <li class="list-item">ControlNet extension installed</li>
                    <li class="list-item">Added <span class="px-1 mx-1 font-mono text-sm italic font-light text-success bg-indigo-950">--api</span> to commandline arguments</li>
                  </ul>
                  <div class="mb-4">
                    <Link class="px-2 py-0 opacity-70 btn btn-secondary btn-outline btn-sm hover:opacity-100" href="#download-button"><span class="">Continue to download</span></Link>
                  </div>
                  <span class="mt-6 mb-6 divider"></span>
                  <p class="mb-4 text-lg font-bold">Starting from scratch?</p>
                  <p class="mb-4">Here's what you'll need:</p>
                  <p class=""><span class="font-extrabold text-transparent bg-indigo-900 bg-gradient-to-tr from-violet-500 via-indigo-400 to-purple-500 bg-clip-text">Stable Diffusion with Automatic111 SD Web UI</span></p>
                  <p class="">The AI system that generates the images. It is free and can be run on consumer-grade hardware.</p>
                  <p class="mb-4">The easiest way to get it running is our pre-built bundle of this third-party software.</p>
                  <a
                    class="mb-4 border-purple-900 shadow-md hover:shadow-lg hover:border-indigo-800 hover:shadow-indigo-800 hover:bg-purple-900 hover:border-purple-900 hover:text-white btn btn-md btn-secondary shadow-purple-900"
                    href="https://davant-public.s3.us-west-1.amazonaws.com/software/StableDiffusion_Davant-Auto111-Quickstart.zip"
                  >
                    Download Our Automatic1111 Quickstart
                  </a>
                  <p class="mb-4"><span class="font-extrabold text-transparent bg-gradient-to-tr from-pink-400 via-fuchsia-500 to-purple-600 bg-clip-text">Davant Studio</span> is an <span class="italic">interface</span> to interact with an active instance of <span class="text-transparent bg-indigo-900 bg-gradient-to-tr from-violet-500 via-indigo-400 to-purple-500 bg-clip-text">Stable Diffusion.</span></p>
                </div>
                <div class="flex items-center text-transparent bg-gradient-to-b from-yellow-300 via-amber-400 to-orange-500 bg-clip-text">
                  <span class="px-1 py-4 mr-2 badge badge-warning badge-xl bg-gradient-to-br from-yellow-300 via-amber-400 to-orange-500">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 stroke-current" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>
                  </span>
                  Install & configure Automatic 1111 before launching Davant Studio.
                </div>
              </div>
            </div>
          </div>
        </div>

        <div id="download-button" class="relative flex flex-col items-center justify-center pt-24 pb-24 text-cyan-200">
          <div class="bg__gradient
            absolute top-1/2 left-1/2 -translate-y-1/2 -translate-x-1/2 z-0 w-5/6 h-full bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))]
            from-purple-950
            via-transparent
            to-transparent opacity-100"></div>
          <div class="bg__gradient
            absolute top-1/4 left-1/4 w-1/2 h-1/2 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))]
            from-fuchsia-300
            via-transparent
            to-transparent opacity-20 animate-spin-slow z-0 mix-blend-hard-light"></div>
          <div class="relative flex flex-col items-center justify-center content">
            <p class="text-lg font-bold">Ready to start creating?</p>
            <a 
              class="pl-0 pr-4 mx-auto mt-6 overflow-hidden rounded-sm shadow shadow-lg shadow-purple-900 mb-7 bo rder-opacity-50 cta__button--download effect__chromeflash btn btn-primary text-md md:text-lg indicator bg-gradient-to-br from-pink-400 via-fuchsia-500 to-purple-500 hover:from-pink-500 hover:to-purple-400 hover:scale-105 text-neutral border-1 border-cyan-500 shadow-pink-500"
              href="https://github.com/davantsystems/davant-studio-release/releases/download/v0.6.2/DavantStudio_v0.6.2.zip"
            >
              <span class="p-2 bg-transparent rounded-full badge-neutral">
                <svg class="stroke-neutral" width="22px" height="22px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" stroke="#ffffff">
                  <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
                  <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g>
                  <g id="SVGRepo_iconCarrier">
                    <path d="M8 22.0002H16C18.8284 22.0002 20.2426 22.0002 21.1213 21.1215C22 20.2429 22 18.8286 22 16.0002V15.0002C22 12.1718 22 10.7576 21.1213 9.8789C20.3529 9.11051 19.175 9.01406 17 9.00195M7 9.00195C4.82497 9.01406 3.64706 9.11051 2.87868 9.87889C2 10.7576 2 12.1718 2 15.0002L2 16.0002C2 18.8286 2 20.2429 2.87868 21.1215C3.17848 21.4213 3.54062 21.6188 4 21.749" stroke-width="1.5" stroke-linecap="round"></path>
                    <path d="M12 2L12 15M12 15L9 11.5M12 15L15 11.5" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                  </g>
                </svg>
              </span>
              <span class="pt-1">Download Davant Studio Now</span>
            </a>
            <p class="text-xs text-center">Join the <a href="https://community.davantsystems.com" class="link">community forum</a> for support <br />and to share what you create.</p>
          </div>
        </div>
      </div>
    </section>

    <section class="container">
      <div class="max-w-3xl px-4 py-32 mx-auto text-center">
        <p class="mb-2 text-2xl text-cyan-300">Can't find what you're looking for?</p>
        <a class="text-transparent bg-gradient-to-tr from-pink-400 via-fuchsia-500 to-purple-800 bg-clip-text"
          href="mailto:support@davantsystems.com">support@davantsystems.com</a>
      </div>
    </section>

    <div class="fixed bottom-0 left-0 z-50 block w-full pointer-events-none bg h-1/6 bg-gradient-to-b from-transparent to-base-300 opacity-80"></div>
  </main>
</Layout>

<style>
  .hero-gradient-1 {
    background-color: rgb(0, 0, 0);
    background-image: radial-gradient(
        at 54% 100%,
        rgb(19, 78, 74) 0,
        transparent 53%
      ),
      radial-gradient(at 48% 98%, rgb(6, 95, 70) 0, transparent 30%),
      radial-gradient(at 29% 31%, rgb(88, 28, 135) 0, transparent 44%),
      radial-gradient(at 86% 21%, rgb(49, 46, 129) 0, transparent 77%),
      radial-gradient(at 53% 40%, rgb(136, 19, 55) 0, transparent 28%),
      radial-gradient(at 29% 82%, rgb(88, 28, 135) 0, transparent 43%);
    pointer-events: none;
  }

  .hero-gradient-1::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: radial-gradient(rgb(19, 136, 124) 0%, transparent 80%);
  }

  .animate-spin-slow {
    animation: spin 20s linear infinite;
  }

  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }
</style>