        drop-shadow(0 0 3px);
    }

    50% {
      filter: drop-shadow(0.08084290417898504px 0 1px rgba(0, 30, 255, 0.5))
        drop-shadow(-0.08084290417898504px 0 1px rgba(255, 0, 80, 0.3))
        drop-shadow(0 0 3px);
    }

    55% {
      filter: drop-shadow(2.3758461067427543px 0 1px rgba(0, 30, 255, 0.5))
        drop-shadow(-2.3758461067427543px 0 1px rgba(255, 0, 80, 0.3))
        drop-shadow(0 0 3px);
    }

    60% {
      filter: drop-shadow(2.202193051050636px 0 1px rgba(0, 30, 255, 0.5))
        drop-shadow(-2.202193051050636px 0 1px rgba(255, 0, 80, 0.3))
        drop-shadow(0 0 3px);
    }

    65% {
      filter: drop-shadow(2.8638780614874975px 0 1px rgba(0, 30, 255, 0.5))
        drop-shadow(-2.8638780614874975px 0 1px rgba(255, 0, 80, 0.3))
        drop-shadow(0 0 3px);
    }

    70% {
      filter: drop-shadow(0.48874025155497314px 0 1px rgba(0, 30, 255, 0.5))
        drop-shadow(-0.48874025155497314px 0 1px rgba(255, 0, 80, 0.3))
        drop-shadow(0 0 3px);
    }

    75% {
      filter: drop-shadow(1.8948491305757957px 0 1px rgba(0, 30, 255, 0.5))
        drop-shadow(-1.8948491305757957px 0 1px rgba(255, 0, 80, 0.3))
        drop-shadow(0 0 3px);
    }

    80% {
      filter: drop-shadow(0.0833037308038857px 0 1px rgba(0, 30, 255, 0.5))
        drop-shadow(-0.0833037308038857px 0 1px rgba(255, 0, 80, 0.3))
        drop-shadow(0 0 3px);
    }

    85% {
      filter: drop-shadow(0.09769827255241735px 0 1px rgba(0, 30, 255, 0.5))
