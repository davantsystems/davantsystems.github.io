    }

    5% {
      filter: drop-shadow(2.7928974010788217px 0 1px rgba(0, 30, 255, 0.5))
        drop-shadow(-2.7928974010788217px 0 1px rgba(255, 0, 80, 0.3))
        drop-shadow(0 0 3px);
    }

    10% {
      filter: drop-shadow(0.02956275843481219px 0 1px rgba(0, 30, 255, 0.5))
