---
import Layout from "../layouts/Layout.astro";
import MainNavWithDropdowns from "../components/MainNavWithDropdowns.astro";
import HeroTwoCards from "../components/HeroTwoCards.astro";
import Footer from "../components/Footer.astro";
import MailchimpForm from "../components/MailchimpForm.astro";
import CardPerson from "../components/CardPerson.astro";
import NewsletterCTA from "../components/NewsletterCTA.astro";
import People from "../components/People.astro";
---

<Layout>
  <div class="relative min-h-screen">
    <script id="luma-checkout" src="https://embed.lu.ma/checkout-button.js"
    ></script>
    <MainNavWithDropdowns />
    <main class="relative z-20 pt-12">
      <HeroTwoCards />

      <section class="relative px-6 pt-12 pb-12 bg-base snap-start">
        <div class="absolute top-0 left-0 z-10 w-full pb-12 mb-0 bg-gradient-to-t from-transparent to-black/20">
        </div>
        <NewsletterCTA />
      </section>

      <People />
    </main>
    <Footer />
    <div class="absolute top-0 left-0 z-50 w-full h-full vhs-effect"></div>
    <div class="absolute top-0 left-0 z-50 w-full h-full vhs-effect-vert"></div>
  </div>
</Layout>

<style>
  @keyframes logo-float {
    0% {
      transform: translate3d(0, 0, 0) rotateY(-5deg) scale(1);
    }

    50% {
      transform: translate3d(0, 0, 0) rotateY(0deg) scale(1.01);
    }

    100% {
      transform: translate3d(0, 0, 0) rotateY(5deg) scale(1);
    }
  }

  .text-fx__title {
    color: #c6cbf5;
    font-family: "Orbitron", sans-serif;
    /* font-size: 8vw; */
    font-weight: 1000;
    line-height: 0.8;
    margin: 0;
    position: relative;
    text-align: center;
    text-transform: uppercase;
    z-index: 11;
    background: -webkit-linear-gradient(
      top,
      #151c60,
      #c6cbf5 40%,
      black 40%,
      #e1a0ce 65%,
      white
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    -webkit-text-stroke-width: 0.02em;
    -webkit-text-stroke-color: white;
  }

  .text-fx__title:before {
    content: "Davant";
    position: absolute;
    left: 0;
    top: 50%;
    transform: translate3d(0, -50%, 0);
    z-index: 10;
    line-height: 0.8;
    background-image: linear-gradient(
      -40deg,
      transparent 0%,
      transparent 40%,
      #fff 50%,
      transparent 60%,
      transparent 100%
    );
    background-position: -4em 0;
    background-repeat: no-repeat;
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    -webkit-text-stroke: 0;
    animation: chrome-flash 5s 2s ease-in-out infinite;
    -webkit-animation: chrome-flash 5s 2s ease-in-out infinite;
  }

  @-webkit-keyframes chrome-flash {
    0% {
      background-position: -4em 0;
    }

    10% {
      background-position: 4em 0;
    }

    100% {
      background-position: 4em 0;
    }
  }

  @keyframes chrome-flash {
    0% {
      background-position: -4em 0;
    }

    10% {
      background-position: 4em 0;
    }

    100% {
      background-position: 4em 0;
    }
  }

  @-webkit-keyframes button-chrome-flash {
    0% {
      left: -100%;
    }

    10% {
      left: 100%;
    }

    100% {
      left: 100%;
    }
  }

  @keyframes button-chrome-flash {
    0% {
      left: -100%;
    }

    10% {
      left: 100%;
    }

    100% {
      left: 100%;
    }
  }

  .effect__chromeflash {
    overflow: hidden;
  }

  .effect__chromeflash::before {
    content: "";
    position: absolute;
    left: -100%;
    top: 50%;
    width: 100%;
    height: 100%;
    transform: translate3d(0, -50%, 0);
    z-index: 20;
    background-image: linear-gradient(
      -40deg,
      transparent 0%,
      transparent 40%,
      #fff 50%,
      transparent 60%,
      transparent 100%
    );
    background-position: -100% 0;
    background-repeat: no-repeat;
    animation: button-chrome-flash 6s 2s ease-in-out infinite;
    animation-name: button-chrome-flash;
    mix-blend-mode: overlay;
    opacity: 0.2;
  }

  .effect__chromeflash::after {
    content: "";
    position: absolute;
    left: -100%;
    top: 50%;
    width: 100%;
    height: 200%;
    transform: translate3d(3%, -50%, 0) skewX(-40deg);
    z-index: 20;
    background-image: linear-gradient(
      -90deg,
      transparent 0%,
      transparent 42%,
      #fff 45%,
      transparent 50%,
      transparent 100%
    );
    background-position: -100% 0;
    background-repeat: no-repeat;
    animation: button-chrome-flash 6s 2s ease-in-out infinite;
    animation-name: button-chrome-flash;
    mix-blend-mode: plus-lighter;
    opacity: 0.2;
  }

  .text-fx__title-secondary {
    color: #d100b1;
    display: block;
    font-family: "Yellowtail", cursive;
    font-weight: 100;
    left: 0.05em;
    letter-spacing: 0em;
    line-height: 0.8;
    margin-top: -0.2em;
    position: relative;
    text-shadow:
      0 0 0.03em #d100b1,
      0 -0.03em 0.03em rgba(255, 255, 255, 0.8),
      0 0.04em 0.04em rgba(0, 0, 0, 0.5),
      0 0 0.1em #d100b1,
      0 0 0.2em rgba(209, 0, 177, 0.2);
    text-align: center;
    text-decoration: underline;
    text-transform: none;
    -webkit-transform: skew(-10deg) rotate(-10deg);
    -ms-transform: skew(-10deg) rotate(-10deg);
    transform: skew(-10deg) rotate(-10deg);
    z-index: 11;
  }

  .logo-triangle {
    animation: dash 1.2s 0.8s ease-in-out forwards;
    fill: url(#grad1);
    filter: url(#dropshadow);
    height: auto;
    stroke-dasharray: 1200;
    stroke-dashoffset: 1200;
    z-index: 8;
  }

  @-webkit-keyframes dash {
    to {
      stroke-dashoffset: 0;
    }
  }

  @keyframes dash {
    to {
      stroke-dashoffset: 0;
    }
  }

  @keyframes textShadow {
