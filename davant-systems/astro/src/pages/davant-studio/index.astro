---
import Layout from "../../layouts/Layout.astro";
import MainNavWithDropdowns from "../../components/MainNavWithDropdowns.astro";
import Footer from "../../components/Footer.astro";
import Link from "../../components/Link.astro";
import hero2 from "../../assets/images/hero2.png";
import davantStudioPresets from "../../assets/images/davant-studio-presets.png";
import davantStudioControls from "../../assets/images/davant-studio-controls.png";
import davantStudioPrompts from "../../assets/images/davant-studio-prompts.png";
import davantStudioPhotoshop from "../../assets/images/davant-studio-photoshop-screenshot.jpg";

const pageTitle = "Davant Systems | Supercharge your creative workflow";
const davantStudioStripeCheckout = "https://buy.stripe.com/7sIg2v8Vz5IH5Fe145";
---

<Layout title={pageTitle}>
  <MainNavWithDropdowns />
  <main class="">
    <section class="border-b-2 hero__wrapper border-slate-400 border-opacity-5">
      <div class="relative flex flex-col items-center justify-center min-h-screen pt-20 overflow-hidden hero sm:flex-row">
        <span class="absolute top-0 left-0 z-40 block w-screen h-screen opacity-100 hero-gradient-1"></span>
        <div class="relative z-20 flex flex-col items-center pt-8 pb-20 text-center hero-content text-neutral-content">
          <div class="flex flex-col items-center mb-2">
            <div class="relative flex flex-col items-center cta-wrapper">
              <div class="flex flex-col software-spotlight sm:flex-row">
                <div class="flex flex-col pr-8 text-left text">
                  <h1 class="mb-4 font-light text-transparent bg-gradient-to-br from-cyan-400 via-teal-400 to-cyan-500 bg-clip-text">
                    <span class="block -mb-4 text-5xl font-bold sm:text-7xl md:text-6xl lg:text-6xl">Davant </span><span class="block text-5xl leading-tight sm:text-7xl md:text-6xl lg:text-6xl">Studio</span>
                  </h1>

                  <p class="mb-4 text-transparent font-extralight bg-gradient-to-br from-cyan-400 via-teal-400 to-cyan-500 bg-clip-text">
                    <span class="block -mb-1 text-3xl font-extrabold sm:text-4xl md:text-4xl lg:text-4xl">AI image tools <span class="font-extralight">for</span></span><span class="block text-3xl leading-tight sm:text-4xl md:text-4xl lg:text-4xl">creative professionals</span>
                  </p>

                  <div class="flex flex-col px-4 py-4 bg-opacity-100 shadow-xl bg-base-300">
                    <div class="mb-3">
                      <!-- Requirements content simplified -->
                      <div class="text-sm">
                        <p class="font-bold mb-2">System Requirements:</p>
                        <ul class="list-disc list-inside">
                          <li>Windows 10/11 (64-bit)</li>
                          <li>16GB RAM minimum</li>
                          <li>NVIDIA GPU with 8GB+ VRAM</li>
                          <li>50GB free disk space</li>
                        </ul>
                      </div>
                    </div>
                    <div class="relative flex flex-col">
                      <a 
                        class="relative z-10 w-auto pl-0 pr-4 mt-4 mb-2 mb-4 rounded-sm shadow-sm bo rder-opacity-50 cta__button--download effect__chromeflash btn btn-primary text-md md:text-lg indicator bg-gradient-to-br from-pink-400 via-fuchsia-500 to-purple-500 hover:from-pink-500 hover:to-purple-400 hover:scale-105 text-neutral border-1 border-cyan-500 shadow-pink-500"
                        href={davantStudioStripeCheckout}
                      >
                        <span class="p-2 bg-transparent rounded-full badge-neutral">
                          <svg class="stroke-neutral" width="22px" height="22px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" stroke="#ffffff">
                            <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
                            <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g>
                            <g id="SVGRepo_iconCarrier">
                              <path d="M8 22.0002H16C18.8284 22.0002 20.2426 22.0002 21.1213 21.1215C22 20.2429 22 18.8286 22 16.0002V15.0002C22 12.1718 22 10.7576 21.1213 9.8789C20.3529 9.11051 19.175 9.01406 17 9.00195M7 9.00195C4.82497 9.01406 3.64706 9.11051 2.87868 9.87889C2 10.7576 2 12.1718 2 15.0002L2 16.0002C2 18.8286 2 20.2429 2.87868 21.1215C3.17848 21.4213 3.54062 21.6188 4 21.749" stroke-width="1.5" stroke-linecap="round"></path>
                              <path d="M12 2L12 15M12 15L9 11.5M12 15L15 11.5" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                            </g>
                          </svg>
                        </span>
                        <span class="pt-1">Try for Free</span>
                      </a>
                      <span class="relative w-auto mx-auto text-center inlineblock badge badge-success">14-day trial</span>
                    </div>
                    <div class="pt-1">
                      <p class="pt-1 mb-4 text-xs text-center">No credit card required</p>
                    </div>
                  </div>
                </div>

                <div class="relative mx-auto mb-0 space-x-2 border-2 border-opacity-50 shadow-lg shadow-base-300 border-indigo-950 shadow-black screenshot-carousel wrapper__screenshots carousel carousel-center w-44 sm:w-60 md:w-96">
                  <div class="relative shadow-md item carousel-item">
                    <img
                      class="z-10 w-44 sm:w-60 md:w-96"
                      src={davantStudioPresets.src}
                      alt="Screenshot of Davant Studio software"
                    />
                  </div>
                  <div class="relative shadow-md item carousel-item">
                    <img
                      class="z-10 w-44 sm:w-60 md:w-96"
                      src={davantStudioControls.src}
                      alt="Screenshot of Davant Studio software"
                    />
                  </div>
                  <div class="relative shadow-md item carousel-item">
                    <img
                      class="z-10 w-44 sm:w-60 md:w-96"
                      src={davantStudioPrompts.src}
                      alt="Screenshot of Davant Studio software"
                    />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="absolute bottom-0 block h-full min-w-full -translate-x-1/2 opacity-100 background-image left-1/2 z-1">
          <img
            class="relative block h-full hero__background-image object-cover w-full"
            src={hero2.src}
            alt="Screenshot of Davant Studio software"
          />
          <div class="absolute bottom-0 left-0 z-10 w-full opacity-100 gradient-fade pb-28 bg-gradient-to-b from-transparent to-base-300"></div>
        </div>
      </div>

      <section class="container px-4 py-20">
        <div class="mb-12 max-w-2xl mx-auto">
          <h2 class="pr-4 mx-auto mb-8 text-lg sm:text-xl md:text-xl md:text-center lg:text-2xl xl:text-4xl text-cyan-100">Your real-time art & design assistant</h2>
          <p class="mb-2 text-xl">Design, paint & create in your favorite creative programs.</p>
          <p class="mb-2 text-xl">Generate, view & control limitless AI-enhanced versions of your image.</p>
          <p class="mb-2 text-xl">All on <em>your</em> local computer for 100% privacy & power.</p>
        </div>
        <div class="relative block p-2 mb-2">
          <img
            class="relative z-10 block w-full"
            src={davantStudioPhotoshop.src}
            alt="Davant Studio and Photoshop"
          />
          <div class="absolute top-0 left-0 block w-full h-full opacity-20 bg-gradient-to-br from-pink-400 via-fuchsia-500 to-purple-500"></div>
        </div>
        <p class="italic text-right text-md text-cyan-100">Photoshop</p>
      </section>

      <section class="container max-w-5xl px-6 mx-auto border-b-2 border-slate-700 border-opacity-10">
        <div class="relative px-4 py-12">
          <p class="block text-sm text-center text-cyan-100">Looking for application files?</p>
          <div class="relative flex flex-wrap items-center justify-center gap-8 pt-4">
            <Link
              href="/davant-studio/download"
              class="btn btn-md btn-outline btn-secondary"
            >
              Download everything needed for Windows
            </Link>
          </div>
        </div>
      </section>

      <section class="max-w-4xl px-4 mx-auto">
        <div class="relative block mx-auto my-20 text-transparent text-bg bg-gradient-to-br from-sky-400 via-secondary to-purple-400 bg-clip-text">
          <h2 class="inline-block w-auto py-0 mb-20 mr-auto text-4xl font-black text-transparent bg-gradient-to-br from-cyan-400 via-teal-400 to-cyan-500 md:text-5xl lg:text-5xl bg-clip-text position">Features</h2>
          <div class="w-full mb-4 text-left text-transparent bg-gradient-to-br from-cyan-400 via-teal-400 to-cyan-500 bg-clip-text">
            <ul class="grid w-full gap-8 pl-0 text-xl font-light leading-snug list-none md:grid-cols-2 sm:text-2xl lg:text-3xl list">
              <li class="w-full mb-4 list-item">
                <h3><span class="block font-bold">Real-time generative AI engine</span></h3>
                <span class="text-lg font-light sm:text-xl lg:text-2xl md:font-extralight lg:font-thin">Render as fast as your computer can handle</span>
              </li>
              <li class="mb-4 list-item">
                <h3><span class="block font-bold">Control what matters</span></h3>
                <span class="text-lg font-light sm:text-xl lg:text-2xl md:font-extralight lg:font-thin">What you need to dial in your vision</span>
              </li>
              <li class="mb-4 list-item">
                <h3><span class="block font-bold">Adapts to you</span></h3>
                <span class="text-lg font-light sm:text-xl lg:text-2xl md:font-extralight lg:font-thin">Use images, folders or screenshot as input</span>
              </li>
              <li class="mb-4 list-item">
                <h3><span class="block font-bold">No internet required</span></h3>
                <span class="text-lg font-light sm:text-xl lg:text-2xl md:font-extralight lg:font-thin">Your files never leave your computer</span>
              </li>
              <li class="mb-4 list-item">
                <h3><span class="block font-bold">Expansive model library</span></h3>
                <span class="text-lg font-light sm:text-xl lg:text-2xl md:font-extralight lg:font-thin">Use any Stable Diffusion checkpoint, embedding or LoRA from the community</span>
              </li>
            </ul>
          </div>
        </div>
      </section>

      <div id="cta-button" class="relative z-20 block px-4 pt-4 pb-10 mt-0 bg-black disclaimer bg-opacity-30">
        <div id="download-button" class="relative flex flex-col items-center justify-center pt-24 pb-24 text-cyan-200">
          <div class="bg__gradient
            absolute top-1/2 left-1/2 -translate-y-1/2 -translate-x-1/2 z-0 w-5/6 h-full bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))]
            from-purple-950
            via-transparent
            to-transparent opacity-100"></div>
          <div class="bg__gradient
            absolute top-1/4 left-1/4 w-1/2 h-1/2 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))]
            from-fuchsia-300
            via-transparent
            to-transparent opacity-20 animate-spin-slow z-0 mix-blend-hard-light"></div>
          <div class="relative flex flex-col items-center justify-center content">
            <p class="text-lg font-bold">Have a subscription?</p>
            <Link 
              class="pl-0 pr-4 mx-auto mt-6 overflow-hidden rounded-sm shadow shadow-lg shadow-purple-900 mb-7 bo rder-opacity-50 cta__button--download effect__chromeflash btn btn-primary text-md md:text-lg indicator bg-gradient-to-br from-pink-400 via-fuchsia-500 to-purple-500 hover:from-pink-500 hover:to-purple-400 hover:scale-105 text-neutral border-1 border-cyan-500 shadow-pink-500"
              href="/davant-studio/download"
            >
              <span class="p-2 bg-transparent rounded-full badge-neutral">
                <svg class="stroke-neutral" width="22px" height="22px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" stroke="#ffffff">
                  <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
                  <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g>
                  <g id="SVGRepo_iconCarrier">
                    <path d="M8 22.0002H16C18.8284 22.0002 20.2426 22.0002 21.1213 21.1215C22 20.2429 22 18.8286 22 16.0002V15.0002C22 12.1718 22 10.7576 21.1213 9.8789C20.3529 9.11051 19.175 9.01406 17 9.00195M7 9.00195C4.82497 9.01406 3.64706 9.11051 2.87868 9.87889C2 10.7576 2 12.1718 2 15.0002L2 16.0002C2 18.8286 2 20.2429 2.87868 21.1215C3.17848 21.4213 3.54062 21.6188 4 21.749" stroke-width="1.5" stroke-linecap="round"></path>
                    <path d="M12 2L12 15M12 15L9 11.5M12 15L15 11.5" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                  </g>
                </svg>
              </span>
              <span class="pt-1">Download Davant Studio Now</span>
            </Link>
          </div>
        </div>
      </div>
    </section>

    <section class="container">
      <div class="max-w-3xl px-4 py-32 mx-auto text-center">
        <p class="mb-2 text-2xl text-cyan-300">Can't find what you're looking for?</p>
        <a class="text-transparent bg-gradient-to-br from-cyan-400 via-teal-400 to-cyan-500 bg-clip-text"
          href="mailto:support@davantsystems.com">support@davantsystems.com</a>
      </div>
    </section>

    <div class="fixed bottom-0 left-0 z-50 block w-full pointer-events-none bg h-1/6 bg-gradient-to-b from-transparent to-base-300 opacity-80"></div>
  </main>
  <Footer />
</Layout>

<style>
  .hero-gradient-1 {
    background-color: rgb(0, 0, 0);
    background-image: radial-gradient(
        at 54% 100%,
        rgb(19, 78, 74) 0,
        transparent 53%
      ),
      radial-gradient(at 48% 98%, rgb(6, 95, 70) 0, transparent 30%),
      radial-gradient(at 29% 31%, rgb(88, 28, 135) 0, transparent 44%),
      radial-gradient(at 86% 21%, rgb(49, 46, 129) 0, transparent 77%),
      radial-gradient(at 53% 40%, rgb(136, 19, 55) 0, transparent 28%),
      radial-gradient(at 29% 82%, rgb(88, 28, 135) 0, transparent 43%);
    pointer-events: none;
  }

  .hero-gradient-1::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: radial-gradient(rgb(19, 136, 124) 0%, transparent 80%);
  }

  .animate-spin-slow {
    animation: spin 20s linear infinite;
  }

  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }
</style>