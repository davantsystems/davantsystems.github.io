---
import { Image } from "astro:assets";
import DavantStudioPage from "../pages/DavantStudioPage.astro";
import Link from "./Link.astro";
import Logo from "../assets/images/DavantSystems-logo-1000.png";
---

<div
  class="fixed top-0 z-50 navbar bg-gradient-to-b from-black to-transparent bg-opacity-0"
>
  <div class="navbar-start">
    <Link class="text-xl btn btn-ghost" to="/">
      <Image src={Logo} alt="Davant Systems" width={100} height={40} />
    </Link>
  </div>
  <div class="hidden navbar-center md:flex">
    <ul
      class="px-1 tracking-tight menu menu-horizontal text-cyan-100 drop-shadow-sm"
    >
      <li>
        <Link to="/davant-studio/" class="hover:bg-base-100 hover:bg-opacity-70"
          >Davant Studio</Link
        >
      </li>
      <li><Link to="/photobooth/" class="hover:bg-base-100 hover:bg-opacity-70">Magic Mirror AI Photo Booth</Link></li>
      <li><Link to="/training/" class="hover:bg-base-100 hover:bg-opacity-70">Training & Workshops</Link></li>
    </ul>
  </div>
  <div class="navbar-end">
    <a class="btn btn-outline btn-secondary btn-xs" href="https://billing.stripe.com/p/login/6oEg26f8K3697yE144" target="_blank"
      >Manage Subscription</a
    >
  </div>
  <div class="dropdown dropdown-end">
    <div tabindex="0" role="button" class="btn btn-ghost md:hidden">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="w-5 h-5"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        ><path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h8m-8 6h16"></path></svg
      >
    </div>
    <ul
      tabindex="0"
      class="menu menu-sm dropdown-content text-cyan-100 mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52"
    >
      <li><Link to="/davant-studio/">Davant Studio</Link></li>
      <li><Link to="/photobooth/" class="hover:bg-base-100 hover:bg-opacity-70">Magic Mirror AI Photo Booth</Link></li>
      <li><Link to="/training/" class="hover:bg-base-100 hover:bg-opacity-70">Training & Workshops</Link></li>
    </ul>
  </div>
  <span
    class="absolute top-0 left-0 w-full h-full scale-y-150 pointer-events-none select-none opacity-40 -z-10 bg-gradient-to-b from-base-100 via-base-100 to-transparent"
  ></span>
</div>
