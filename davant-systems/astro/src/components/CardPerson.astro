---
export interface Props {
  headline: string;
  name: string;
  email: string;
}

const { headline, name, email } = Astro.props;
---

<div
  class="relative px-4 py-10 overflow-hidden border-0 rounded-2xl border-opacity-10 border-success lg:px-8 lg:py-20"
>
  <div class="relative z-10 block content">
    <h4
      class="mb-4 text-xl font-bold miniblur sm:text-3xl md:text-3xl lg:text-4xl lg:mb-6"
    >
      {headline}
    </h4>
    <p class="mb-3 text-sm lg:text-lg miniblur">{name}</p>
    <a
      class="underline transition-colors hover:text-green-300 miniblur"
      href={`mailto:${email}`}>{email}</a
    >
  </div>
  <div
    class="absolute inset-0 z-0 bg-linear-to-br from-purple-950 via-teal-800 to-black opacity-10"
  >
  </div>
</div>

<style>
  .miniblur {
    filter: blur(0.01em);
    text-shadow:
      0em -0.02em 0.02em rgba(180, 255, 200, 1),
      /* Almost-white inner highlight */ 0 0 0.04em rgba(80, 255, 245, 0.8),
      /* Almost-white inner highlight */ 0 0 0.3em rgba(0, 100, 145, 0.6),
      0 0 0.3em rgba(0, 100, 145, 0.6),
      /* Soft outer glow */ 0 0 0.3em rgba(0, 160, 200, 0.4),
      /* Softer, more spread outer glow */ /* Subtle shadow for depth */ 0.025em
        0.04em 0.01em rgba(1, 25, 40, 1); /* Subtle bottom shadow for roundness */
  }
</style>
