<div id="mc_embed_signup" class="relative z-10">
  <form
    id="mc-embedded-subscribe-form"
    name="mc-embedded-subscribe-form"
    class="validate form-control"
    action="https://gmail.us21.list-manage.com/subscribe/post?u=2edf9866c6815edca67996426&amp;id=f80cae6640&amp;f_id=003a55e1f0"
    method="post"
    target="_blank"
    novalidate
  >
    <div id="mc_embed_signup_scroll">
      <label
        for="mce-EMAIL"
        class="block mb-2 text-xs text-secondary"
      >
        Email Address
      </label>
      <input
        type="email"
        name="EMAIL"
        class="w-full mb-3 rounded-none required email input input-secondary border-secondary/20"
        id="mce-EMAIL"
        required
      />

      <label for="mce-FNAME" class="block mb-2 text-xs text-secondary">
        First Name
      </label>
      <input
        type="text"
        name="FNAME"
        class="w-full mb-3 rounded-none input input-secondary border-secondary/20"
        id="mce-FNAME"
      />

      <label for="mce-LNAME" class="block mb-2 text-xs text-secondary">
        Last Name
      </label>
      <input
        type="text"
        name="LNAME"
        class="w-full mb-6 rounded-none input input-secondary border-secondary/20"
        id="mce-LNAME"
      />

      <input
        class="w-full transition-all btn btn-secondary bg-gradient-to-br from-secondary via-cyan-300 to-blue-400 hover:via-cyan-300 hover:to-cyan-600"
        type="submit"
        value="Subscribe"
        name="subscribe"
        id="mc-embedded-subscribe"
      />
      
      <div id="form-message" class="hidden mt-2 text-sm text-secondary"></div>
    </div>
  </form>
</div>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('mc-embedded-subscribe-form');
    const messageDiv = document.getElementById('form-message');
    
    if (form && messageDiv) {
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const formData = new FormData(form);
        const email = formData.get('EMAIL');
        const firstName = formData.get('FNAME'); 
        const lastName = formData.get('LNAME');
        
        const params = new URLSearchParams();
        if (email) params.append('EMAIL', email.toString());
        if (firstName) params.append('FNAME', firstName.toString());
        if (lastName) params.append('LNAME', lastName.toString());
        
        try {
          await fetch(form.action, {
            method: 'POST',
            body: params.toString(),
            headers: {
              'Content-Type': 'application/x-www-form-urlencoded'
            },
            mode: 'no-cors'
          });
          
          messageDiv.textContent = "Subscription request sent. Check your email for confirmation.";
          messageDiv.classList.remove('hidden');
          form.reset();
          
          setTimeout(() => {
            messageDiv.classList.add('hidden');
          }, 5000);
        } catch (error) {
          console.error("Error submitting form:", error);
          messageDiv.textContent = "An error occurred. Please try again.";
          messageDiv.classList.remove('hidden');
        }
      });
    }
  });
</script>